<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgetPassActivity"
    android:orientation="vertical"
    android:background="@drawable/base"
    android:padding="10dp">



    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="#f00000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="10dp"
        android:fontFamily="cursive"/>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:text=" Enter Your Email To Reset Password"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#f000"
        android:textSize="30sp"
        android:textStyle="bold" />




    <EditText
        android:id="@+id/emailAddEditText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:alpha="0.30"
        android:background="@drawable/squircle_btn"
        android:backgroundTint="#DE1515"
        android:hint="Enter Your Email Address"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorHint="#ffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/round_btn"
        android:onClick="sendEmail"
        android:text="Send"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="back"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="Back to Log in !"
        android:textAlignment="center"
        android:textColor="#f000"
        android:textSize="18sp" />


</LinearLayout>